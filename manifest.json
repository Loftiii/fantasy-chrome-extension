{
  "name": "ESPN LM Note Builder",
  "version": "1.0",
  "description": "Build power rankings and leader boards for your ESPN Fantasy Football League!",
  "permissions": ["activeTab", "tabs", "declarativeContent", "storage", "http://games.espn.com"],
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://games.espn.com"],
      "js": ["html2canvas.js", "open-dialog.js", "screenshot.js"]
    }
  ],
  "web_accessible_resources": [
    "screenshot.js"
  ],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 3
}
